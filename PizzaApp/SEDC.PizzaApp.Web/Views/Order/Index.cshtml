<div class="row">
    <div class="col-md-5">
        @foreach (var item in Model)
        {
            <h4>Order Details</h4>
            <p>Pizza Name: @item.PizzaName</p>
            <p>User: @item.UserFullName</p>
            <p>Price: @item.Price</p>
            <p>Payment method: @item.PaymentMethod</p>
            <p>User Address: @item.Address</p>

            <partial name="~/Views/Shared/Partial/_OrderDetails.cshtml" for="@item" />
            @*<a asp-action="OrderDetails" asp-controller="Order" asp-route-id="@order.Id">Details</a>*@
            @Html.ActionLink("Details", "OrderDetails", "Order", new { id = item.Id })
            <a asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@item.Id">Delete</a>
            <a asp-action="EditOrder" asp-controller="Order" asp-route-id="@item.Id">Edit Order</a>
            <a asp-action="CreateOrder" asp-controller="Order" asp-route-id="@item.Id">Create Order</a>
        }

    </div>
</div>

