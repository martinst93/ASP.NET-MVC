@model HomeViewModel

@{ 
    ViewBag.Title = "Welcome";
}

<div class="jumbotron">
    <h1>Welcome to the E-Store</h1>
    <p>The best place to buy the new technology products!</p>

        <form asp-action="Index" asp-controller="Home" method="post">
            <div class="row">
                <div class="col-md-2">
                    <div class="input-group">
                        <span class="input-group-btn">

                            <input type="button" value="Products" onclick="location.href='@Url.Action("Products", "Home" )'" />

                        </span>
                    </div>
                </div>
            </div>
        </form>

</div>